root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8

# This matches upstream style
[*.c]
trim_trailing_whitespace = false
indent_style = tab

# Tab indentation
[Makefile]
indent_style = tab
